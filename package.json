{
  "name": "@ls-stack/i18n",
  "description": "Super simple i18n library",
  "version": "0.3.0",
  "license": "MIT",
  "scripts": {
    "test": "vitest --ui",
    "test:run": "vitest run",
    "lint": "pnpm tsc && pnpm eslint",
    "tsc": "tsc -p tsconfig.prod.json",
    "eslint": "CI=true eslint src/ --color --max-warnings=0",
    "build": "pnpm test:run && pnpm lint && pnpm build:no-test",
    "build:no-test": "tsup",
    "build-test": "tsup --config tsup.test.config.ts",
    "pre-publish": "./scripts/check-if-is-sync.sh && pnpm build",
    "test-cli:check": "pnpm build:no-test && node dist/cli.js --default en --config-dir ./cli-test/config --src-dir ./cli-test/src",
    "test-cli:fix": "pnpm test-cli:check --fix"
  },
  "files": [
    "dist"
  ],
  "bin": "./dist/cli.js",
  "repository": "github:lucasols/utils",
  "author": "Lucas Santos",
  "type": "module",
  "main": "./dist/main.cjs",
  "module": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "require": "./dist/main.cjs"
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">=21.5.0"
  },
  "devDependencies": {
    "@ls-stack/extended-lint": "^0.2.0",
    "@types/node": "^22.5.5",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "@vitest/ui": "^2.1.1",
    "eslint": "^9.10.0",
    "@types/eslint": "^9.6.1",
    "@types/eslint__js": "^8.42.3",
    "eslint-plugin-unicorn": "^55.0.0",
    "eslint-plugin-vitest": "^0.5.4",
    "prettier": "3.3.3",
    "prettier-plugin-organize-imports": "^4.0.0",
    "tsm": "^2.3.0",
    "tsup": "^8.3.0",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.6.0",
    "vite": "^5.4.6",
    "vitest": "^2.1.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "readdirp": "^3.6.0",
    "type-flag": "^3.0.0"
  }
}
